{% extends "base.njk" %}
{% block content %}
    <div class="container my-5">
        {% if message %}
            {{message}}

        {% endif %}
        <form action="/shorturl" method="POST">
            <div class="row my-3">
                <label class="col-sm-2 col-form-label" for="inputEmail3">Enter your url</label>
                <div class="col-sm-10">
                    <input
          class="form-control"
          id="inputEmail3"
          type="text"
          name="url"
          placeholder="Enter your url"
          required
/>
                </div>
            </div>
            <button type='submit' class='btn btn-primary my-5'> Short Url</button>
        </form>
    </div>

{% endblock %}